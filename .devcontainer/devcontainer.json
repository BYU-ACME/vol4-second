{
  // Name and pull image
  "name": "Vol 4 Second Container",
  "image": "ghcr.io/byu-acme/vol4-second-container:latest",
  "containerName": "vol4-second-container",
  "workspaceFolder": "/workspaces",

  // Disables the vsce tools so they don't take over the cpu
  // Also fixes the dubious ownership error if it appears after the initial build
  "postStartCommand": "sudo /usr/local/bin/disable-vsce-sign && git config --global --add safe.directory '*'",

  "customizations": {
    // Various VS Code settings
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash"
          }
        },
        "files.autoSave": "afterDelay",
        "files.autoSaveDelay": 1000,
        "files.exclude": {
          "**/.*": true,
          "**/.devcontainer": true,
          "**/.vscode": true,
          "**/.git": true,
          "**/.github": true,
          "**/.gitignore": true,
          "**/requirements.txt": true,
          "**/*.md": true,
          "**/*.tex": true,
          "**/content": true,
          "**/__pycache__": true,
          "**/*.pyc": true,
          "**/validate_driver.txt": true,
          "**/download_data.sh": true
        },
        "github.copilot.enable": false,
        "github.copilot-chat.enable": false,
        "extensions.ignoreRecommendations": true,
        "extensions.unwantedRecommendations": [
          "GitHub.copilot",
          "GitHub.copilot-chat"
        ]
      },
      // Install Extensions upon build
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}